<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite">
    <!-- Textview to show user name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="54sp"
        android:layout_marginLeft="20dp"/>

    <!-- Imageview to show profile pic-->
    <ImageView
        android:id="@+id/user_profile_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toRightOf="@id/user_name"
        android:layout_alignBottom="@id/user_balance"/>

    <!-- Textview to show user balance header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:text="@string/user_balance"
        android:id="@+id/user_balance_header"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="22sp"/>

    <!-- Textview to show user balance -->
    <TextView
        android:id="@+id/user_balance"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/user_balance_header"
        android:layout_below="@+id/user_balance_header"
        android:textSize="54sp"/>


</RelativeLayout>
